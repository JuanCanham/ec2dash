{
  "compilerOptions": {
    "declaration": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "./bin",
    "preserveConstEnums": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": false,
    "target": "es6"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}