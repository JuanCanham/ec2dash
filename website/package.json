{
  "name": "ec2-dash-website",
  "version": "0.1.0",
  "description": "EC2 Dashboard",
  "scripts": {
    "prepare": "tsc && webpack",
    "lint": "eslint src/*.ts tests/*.ts",
    "test-only": "mocha --require ts-node/register tests/*.ts",
    "test": "npm run lint && nyc npm run test-only"
  },
  "license": "ISC",
  "repository": {
    "type": "git"
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/chai-as-promised": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.7",
    "@types/sinon": "^10.0.6",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^15.0.0",
    "eslint-plugin-import": "^2.25.3",
    "jsdom": "18.0.1",
    "jsdom-global": "3.0.2",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "sinon": "^12.0.1",
    "ts-mock-imports": "^1.3.8",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4",
    "webpack": "^5.64.0",
    "webpack-cli": "^4.9.1"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "airbnb-base",
      "airbnb-typescript/base"
    ],
    "parserOptions": {
      "project": "./tsconfig-linting.json"
    },
    "ignorePatterns": [
      "node_modules",
      "bin",
      "coverage"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "functions": 90,
    "lines": 80,
    "branches": 40,
    "include": [
      "src/*.ts"
    ],
    "sourceMap": true,
    "reporter": [
      "text",
      "text-summary"
    ],
    "all": true
  }
}
